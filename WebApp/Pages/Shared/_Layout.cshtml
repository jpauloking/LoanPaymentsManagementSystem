                                    <a asp-page="/Installments/Index" asp-route-CategoryName="Active" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Active</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Installments/Index" asp-route-CategoryName="Overdue" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Overdue</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Loans
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Loans/Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>All</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Loans/Index" asp-route-CategoryName="Active" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Active</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Borrowers
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-page="/Borrowers/Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>All</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-page="/Borrowers/Index" asp-route-CategoryName="Active" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Active</p>
                                    </a>
                                </li>
                            </ul>
                        </li>*@
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->

            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- ./Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Track loan payments easily
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2023 <a href="/Index">Loan Payments</a>.</strong> All rights reserved.
        </footer>
        <!--./ Main Footer -->
    </div>
    <!-- ./wrapper -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/datatables/datatables.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/plugins-init.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>