@page "{id?}"
@model WebApp.Pages.Loans.DetailsModel

@{
    ViewData["Title"] = "Loan Details";
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Loans</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Loans">Loans</a></li>
                    <li class="breadcrumb-item ">Details</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="row gap-3 gap-md-0">
            <div class="col-md-4">
                <ul class="list-group">
                    <li class="list-group-item">
                        <a asp-page="Index" class="text-decoration-none fs-6 fw-light">Back to loans</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#loan" class="text-decoration-none fs-6 fw-light">Loan</a>
                    </li>
                    <li class="list-group-item">
                        <a href="#borrower" class="text-decoration-none fs-6 fw-light">Borrower</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-8">
                <div class="card card-primary card-outline mb-3">
                    <div class="card-header bg-white">
                        <nav>
                            <div class="nav nav-tabs nav-justified card-header-tabs" id="nav-tab" role="tablist">
                                <button class="nav-link  active fs-6 fw-light" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Details</button>
                                <button class="nav-link fs-6 fw-light" id="nav-installments-tab" data-bs-toggle="tab" data-bs-target="#nav-installments" type="button" role="tab" aria-controls="nav-installments" aria-selected="false">Installments</button>
                            </div>
                        </nav>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                <div class="row gap-3">
                                    <div id="loan" class="col-12">
                                        <ul class="list-group">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.LoanNumber)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.LoanNumber</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.DateOpened)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.DateOpened.ToShortDateString()</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Principal)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.Principal</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.DurationInDays)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.DurationInDays</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.InterestRate)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.InterestRate</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.IsOverDue)</span>
                                                @if (Model.LoanDetailsViewModel.Loan.IsOverDue)
                                                {
                                                    <div class="badge bg-danger">yes</div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">no</span>
                                                }
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.IsPaid)</span>
                                                @if (Model.LoanDetailsViewModel.Loan.IsPaid)
                                                {
                                                    <div class="badge bg-success">yes</div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">no</span>
                                                }
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.IsScrappedOff)</span>

                                                @if (Model.LoanDetailsViewModel.Loan.IsScrappedOff)
                                                {
                                                    <div class="badge bg-danger">yes</div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">no</span>
                                                }
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.IsWrittenOff)</span>
                                                @if (Model.LoanDetailsViewModel.Loan.IsWrittenOff)
                                                {
                                                    <div class="badge bg-danger">yes</div>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">no</span>
                                                }
                                            </li>
                                        </ul>
                                    </div>
                                    <div id="borrower" class="col-12">
                                        <ul class="list-group">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Borrower!.FirstName)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.Borrower!.FirstName</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Borrower!.LastName)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.Borrower!.LastName</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Borrower!.Email)</span>
                                                <span class="text-lowercase fw-bold">@Model.LoanDetailsViewModel.Loan.Borrower!.Email</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Borrower!.Phone)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.Borrower!.Phone</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Borrower!.Address)</span>
                                                <span class="fw-bold">@Model.LoanDetailsViewModel.Loan.Borrower!.Address</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade show" id="nav-installments" role="tabpanel" aria-labelledby="nav-installments-tab">
                                <div class="d-flex justify-content-end align-items-center mb-3">
                                    <a asp-page="/Installments/Create" asp-route-LoanId="@Model.LoanDetailsViewModel.Loan.Id" class="text-decoration-none fs-6 fw-light">Create installment</a>
                                </div>
                                <table class="w-100 table table-hover table-responsive mb-3">
                                    <thead>
                                        <tr>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.LoanNumber)</th>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Installments[0].InstallmentNumber)</th>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Installments[0].PaymentNumber)</th>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Installments[0].DateDue)</th>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Installments[0].Amount)</th>
                                            <th class="fw-light fs-6">@Html.DisplayNameFor(model => model.LoanDetailsViewModel.Loan.Installments[0].PercentagePenaltyFeePerDayOverDue)</th>
                                            <th class="fw-light fs-6"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.LoanDetailsViewModel.Loan.Installments)
                                        {
                                            <tr valign="middle">
                                                <td>@Model.LoanDetailsViewModel.Loan.LoanNumber</td>
                                                <td>@item.InstallmentNumber</td>
                                                <td>@item.PaymentNumber</td>
                                                <td>@item.DateDue.ToShortDateString()</td>
                                                <td>@item.Amount.ToString("C")</td>
                                                <td>@((item.Amount * (decimal)(item.PercentagePenaltyFeePerDayOverDue) * 0.01M).ToString("C"))</td>
                                                <td>
                                                    <a asp-page="/Installments/Edit" asp-route-ID="@item.Id" asp-route-ReturnURL="/Loans/Details/@Model.LoanDetailsViewModel.Loan.Id" class="text-decoration-none fs-6 fw-light">Manage</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body d-flex btn-group">
                        <a asp-page="Edit" asp-route-ID="@Model.LoanDetailsViewModel.Loan.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-page="Delete" asp-route-ID="@Model.LoanDetailsViewModel.Loan.Id" class="btn btn-outline-danger">Delete</a>
                        <a asp-page="Index" class="btn btn-outline-primary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content -->