@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">

        <!-- Info boxes -->
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-cog"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Installment Payment</span>
                        <span class="info-box-number">
                            10
                            <small>%</small>
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-thumbs-up"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Borrower Recurrance</span>
                        <span class="info-box-number">41,410</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-shopping-cart"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Borrower Referrals</span>
                        <span class="info-box-number">760</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-users"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Borrower Recurrance</span>
                        <span class="info-box-number">2,000</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

        <!-- Summaries -->
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <!-- card -->
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h5 class="m-0 d-flex justify-content-between align-items-center">
                            <span>Installments</span>
                            <span></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Installments/Index" class="btn btn-primary">Go to installments</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-6 col-lg-4">
                <!-- card -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h5 class="m-0 d-flex justify-content-between align-items-center">
                            <span>Loans</span>
                            <span></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Loans/Index" class="btn btn-primary">Go to loans</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-6 col-lg-4">
                <!-- card -->
                <div class="card card-warning card-outline">
                    <div class="card-header">
                        <h5 class="m-0 d-flex justify-content-between align-items-center">
                            <span>Borrowers</span>
                            <span></span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Borrowers/Index" class="btn btn-primary">Go to borrowers</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->

        <!-- Tables -->
        <div class="row">
            <div class="col-12">
                <!-- card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="m-0 d-flex justify-content-between align-items-center">
                            <span>Installments due today</span>
                            <span>@DateTime.Today.Date.ToShortDateString()</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Installments/Index" asp-route-CategoryName="Today" class="btn btn-primary">Go to installments</a>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-12 -->
            <div class="col-12">
                <!-- card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="m-0 d-flex justify-content-between align-items-center">
                            <span>Installments overdue today</span>
                            <span>@DateTime.Today.Date.ToShortDateString()</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <a asp-page="/Installments/Index" asp-route-CategoryName="Overdue" class="btn btn-primary">Go to installments</a>
                    </div>
                </div>
                <!-- ./card -->
            </div>
            <!-- /.col-12 -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content -->
