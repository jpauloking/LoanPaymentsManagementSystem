@page
@model LogoutModel
@using Microsoft.AspNetCore.Identity
@using WebApp.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Log out";
}


@{
    if (User.Identity?.IsAuthenticated ?? false)
    {
        <h6 class="h6">Hello, @(UserManager.GetUserName(User))</h6>
        <p>You are about to sign out. You will be required to sign in next time you use the system.</p>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <button type="submit" class="btn btn-primary">Click here to Logout</button>
        </form>
    }
    else
    {
        <p>You have successfully logged out of the application.</p>
    }
}
